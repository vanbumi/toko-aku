<div class="container">  
  <p id="notice"><%= notice %></p>

  <h1>Listing Products</h1>

  <span class="glyphicon glyphicon-plus"></span>&nbsp;<%= link_to 'New', new_product_path %>
  <table class="table table-hover table-bordered table-striped" style="">
  <style>
    a:hover{
      background-color: #ffc0cb;
    }
    
  </style>

    <thead>
      <!-- judul kosongkan saja -->
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= image_tag(product.image_url, width:"150px") %></td>
          <td>
            <dl>
              <dt><%= product.name %></dt>
              <dd><%= truncate(strip_tags(product.description), length: 180) %></dd>
              <dd>Rp.<%= product.price %></dd>
            </dl>
          </td>    
          <td><h3><%= link_to '', product, class:"glyphicon glyphicon-eye-open" %></h3></td>
          <td><h3><%= link_to '', edit_product_path(product), class:"glyphicon glyphicon-pencil" %></h3></td>
          <td><h3><%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"glyphicon glyphicon-trash" %></h3></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>